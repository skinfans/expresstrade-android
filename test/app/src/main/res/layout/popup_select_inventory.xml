<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:text="Select inventory"
            android:textAllCaps="true"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <!--CLOSE-->
        <fans.skin.expresstrade.view.AppButton
            android:id="@+id/bt_close"
            android:background="@drawable/bg_button_red"
            app:sText="@string/bt_back"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="35dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content">

        <!--VGO-->
        <LinearLayout
            android:id="@+id/ll_vgo"
            android:background="@color/bg_content"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_height="50dp">

            <ImageView
                android:src="@drawable/ic_vgo"
                android:layout_width="50dp"
                android:layout_height="43dp"/>

            <TextView
                android:layout_marginLeft="6dp"
                android:text="VGO SKINS"
                android:textColor="#fff"
                android:textSize="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <!--STICKERS-->
        <LinearLayout
            android:id="@+id/ll_stickers"
            android:background="@color/bg_content"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_height="50dp">

            <ImageView
                android:src="@drawable/ic_sticker"
                android:layout_width="50dp"
                android:layout_height="40dp"/>

            <TextView
                android:layout_marginLeft="6dp"
                android:text="WAX STICKERS"
                android:textColor="#fff"
                android:textSize="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <!--KITTENS-->
        <LinearLayout
            android:id="@+id/ll_kitties"
            android:background="@color/bg_content"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_height="50dp">

            <ImageView
                android:src="@drawable/ic_sticker_cat"
                android:layout_width="50dp"
                android:layout_height="43dp"/>

            <TextView
                android:layout_marginLeft="6dp"
                android:text="CRYPTOKITTIES"
                android:textColor="#fff"
                android:textSize="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>



    </LinearLayout>


</LinearLayout>