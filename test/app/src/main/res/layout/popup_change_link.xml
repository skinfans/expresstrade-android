<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:text="Trade URL"
            android:textAllCaps="true"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <!--CLOSE-->
        <fans.skin.expresstrade.view.AppButton
            android:id="@+id/bt_close"
            android:background="@drawable/bg_button_red"
            app:sIcon="@drawable/ic_cancel"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="35dp" />

    </LinearLayout>

    <TextView
        android:text="Friend's Trade URL is invalid. Please enter the current URL link."
        android:layout_width="match_parent"
        android:textColor="@color/gray_light"
        android:gravity="center"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/et_input"
        android:background="@color/bg_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:hint="https://trade.opskins.com/t/000000/XXXXXX"
        android:textColorHint="@color/gray_dark"
        android:layout_marginRight="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_height="40dp"/>

    <fans.skin.expresstrade.view.AppFullButton
        android:id="@+id/bt_edit"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/bg_button_red_dark"
        android:layout_gravity="bottom"
        android:clickable="true"
        android:gravity="center"
        app:sText="@string/bt_save_link"/>

</LinearLayout>